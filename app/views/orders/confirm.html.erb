<div class="container mt-3">
  <h3>発注確認画面</h3>
  <div class="row">
   <%= form_with model: @order, local: true, url: {action: :create}, method: :post do |f| %>
    <table class="table">
      <thead class="thead-lignt">
        <tr>
          <th>商品名</th>
          <th>商品概要</th>
          <th>発注数</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.product.name %></td>
          <td><%= cart_item.product.introduction %></td>
          <td><%= cart_item.quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
      <div class="mx-auto">
      <%= f.label :introduction, '何かあればご記入ください' %>
      <%= f.text_area :introduction, class:'col-5' %>
      </div>
  </div>
  <div class="row">
      <div class="ml-auto">
      <%= f.submit "確定", class:"btn btn-success" %>
      <% end %>
      </div>
  </div>
</div>