<div class="container">
   <h3>予定詳細</h3>
   <div class="card border-dark" style="width: 30rem; margin:0 auto;">
        <div class="card-header" style="background-color: #63ceef;"> <%= @event.title %></div>
        <div class="card-body text-secondary">
          <p class="card-text"><%= @event.body %></p>
          <p class="card-text"><%= @event.start_date.strftime("%m月%d日 %H時%M分") %> ~ <%= @event.end_date.strftime("%m月%d日 %H時%M分") %></p>
          <p style='text-align: end'>
              <%= link_to "戻る", events_path,class: 'btn btn-info' %>
              <% if current_user = @event.user %>
              <%= link_to '編集', edit_event_path(@event), class: 'btn btn-success' %>
              <%= link_to '削除', event_path(@event), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
             <% end %>
          </p>
        </div>
      </div>
</div>