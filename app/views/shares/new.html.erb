<div class="container">
  <%= form_with model: @share, local:true do |f| %>
  <h3>共有事項作成</h3>
  <%= render 'layouts/error', model: f.object %>
  <div class="row">
    <div class="form-group ml-3" style="width:50rem;">
         <label for="share_information_title">タイトル</label><br>
         <%= f.text_field :share_information_title,class:'col-9' %><br>
         <label for="share_information">内容</label><br>
         <%= f.text_area :share_information,class:'col-9' %><br>
         <%= f.submit '投稿', class:'btn btn-info' %>
    </div>
  </div>
  <% end %>
</div>