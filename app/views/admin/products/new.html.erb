<div class="container">
 <%= form_with model: [:admin, @product], local:true do |f| %>
  <%= render 'layouts/error', model: f.object %>
  <h3>商品登録</h3>
  <div class="row">
    <div class="form-group ml-3" style="width:50rem;">
      <div class="form-group">
         <label for="name">商品名</label><br>
         <%= f.text_field :name,class:'col-7' %><br>
         <label for="introduction">商品概要</label><br>
         <%= f.text_area :introduction,class:'col-7' %><br>
         <%= f.submit '商品登録', class:'btn btn-info' %>
      </div>
    </div>
  </div>
  <% end %>
</div>