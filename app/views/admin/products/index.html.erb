<div class="container mt-3">
  <h3>商品一覧</h3>
  <div class="row">
      <div class="d-flex ml-auto mb-3">
        <div><%= link_to"商品登録",new_admin_product_path, class:"btn btn-secondary" %></div>
      </div>
    <table class="table">
      <thead class="thead-lignt">
        <tr>
          <th>商品名</th>
          <th>商品概要</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.introduction %></td>
          <td><%= link_to"編集",edit_admin_product_path(product.id), class:"btn btn-success" %></td>
          <td><%= link_to"削除",admin_product_path(product.id), method: :delete, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>