<div class="container">
  <div class="row">
    <h3 class="ml-5">受注先からのお知らせ</h3>
    <div class="ml-auto"><%= link_to"受注先へのお知らせ作成",new_user_notice_path, class:"btn btn-secondary" %></div>
  </div>
  <div class="row">
    <div class="mx-auto w-auto mt-3">
    <div class="col_md_8">
    <% @admin_notices.each do |admin_notice| %>
    <div class="mb-3">
    <div class="card border-dark" style="width: 50rem;">
  <div class="card-header" style="background-color: #FFFF99;">
    <%= admin_notice.information_title %>
    <span style="font-size:small;">[<%= admin_notice.created_at.strftime("%m月%-d日%k時%-M分")%>]</span>
  </div>
  <div class="card-body">
    <p class="card-text"><%= admin_notice.information_body %></p>
    <%= link_to"削除",user_notice_path(admin_notice.id), method: :delete, data: { confirm: "【確認】削除してもよろしいですか？" },class:"btn btn-outline-warning" %>
  </div>
  </div>
  </div>
  <% end %>
  </div>
  </div>
  </div>
  <div class="row">
    <div class="mx-auto"><%= paginate @admin_notices%></div>
  </div>
</div>