<div class="container mt-3">
  <h3>受注詳細</h3>
 <div class="row">
   <div class ="col-md-7">
   <table class="table">
      <thead class="thead-lignt">
        <tr>
          <th>受注時間</th>
          <th>発注者</th>
          <th>発注元電話番号</th>
          <th>発注概要</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @order.created_at.strftime("%Y/%m/%d")%></td>
          <td><%= @order.user.name %></td>
          <td><%= @order.user.phone_number %></td>
          <td><%= @order.introduction %></td>
        </tr>
      </tbody>
    </table>
    </div>
 <div class="col-md-5">
   <table class="table">
      <thead class="thead-lignt">
        <tr>
          <th>受注商品</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <% @order_detalis.each do |order_detali| %>
        <tr>
          <td><%= order_detali.product.name %></td>
          <td><%= order_detali.quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
 </div>
 </div>
  <div class ="row">
    <div class="ml-auto mb-5 ">
     <div class="form-group">
       <div class="ml-5 mb-3">
        <%= form_with model: [:admin, @order], local:true do |f| %>
           <label for="name">発送状況</label><br>
                <div class="ml-5">
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :is_active, '未発送', value:false %>
                  <%= f.radio_button :is_active, true %>
                  <%= f.label :is_active, '発送済み', value:true %>
                </div>
           <%= f.submit "発送完了", class:"btn btn-success" %>
         <% end %>
         </div>
      </div>
          <div class="ml-auto ml-5">
          <%= link_to '受注一覧へ', admin_orders_path,class: 'btn btn-info' %>
          </div>
      </div>
    </div>
</div>