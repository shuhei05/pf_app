<div class="container mt-3">
  <h3>受注一覧</h3>
  <div class="row">
    <table class="table table_border_radius border-dark table-bordered table-light">
      <thead class="thead-lignt">
        <tr>
          <th>受注時間</th>
          <th>発注者</th>
          <th>発送状況</th>
          <th>発注概要</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.reverse.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d")%></td>
          <td><%= order.user.name %></td>
          <td><% if order.is_active == false %>
                  <p class="text-black-50">未発送</p>
                <% else %>
                  <p class="text-success">発送済み</p>
                <% end %></td>
          <td><%= order.introduction %></td>
          <td><%= link_to"受注詳細へ",admin_order_path(order.id), class:"btn btn-info" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mx-auto"><%= paginate @orders%></div>
  </div>
</div>